
@page "/counter"
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer
@inject IValidacaoServico validacaoServico
@inject NavigationManager Navigation
@inject ILogServico logServico

<PageTitle>Counter</PageTitle>
<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        try
        {
            var validado = await validacaoServico.ValidarTokenDeAcessoAsync();

            if (validado)
                return;

            Navigation.NavigateTo("/");
            return;
        }
        catch (Exception ex)
        {
            logServico.EnviarLog($"Erro em {nameof(Counter)}, função {nameof(OnInitializedAsync)}: {ex.Message}");
            Navigation.NavigateTo("/");
            return;
        }
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
